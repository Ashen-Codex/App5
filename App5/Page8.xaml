<Page
    x:Class="App5.Page8"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Отладка и профилирование" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border 
                Grid.Column="0"
                Margin="0,0,10,0"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                CornerRadius="8"
                Padding="15">
                <StackPanel>
                    <TextBlock Text="Методы с ошибками" FontSize="20" Margin="0,0,0,15"/>

                    <Button 
                        Content="NullReferenceException" 
                        Click="NullReference_Click"
                        Height="40"
                        Margin="0,0,0,15"
                        Background="#FFD83B3B"
                        Foreground="White"
                        FontSize="16"/>

                    <Button 
                        Content="IndexOutOfRangeException" 
                        Click="IndexOutOfBounds_Click"
                        Height="40"
                        Margin="0,0,0,15"
                        Background="#FFD83B3B"
                        Foreground="White"
                        FontSize="16"/>

                    <Button 
                        Content="DivideByZeroException" 
                        Click="DivideByZero_Click"
                        Height="40"
                        Margin="0,0,0,15"
                        Background="#FFD83B3B"
                        Foreground="White"
                        FontSize="16"/>

                    <TextBlock 
                        x:Name="ErrorTextBlock" 
                        Foreground="Red" 
                        TextWrapping="Wrap" 
                        Margin="0,5,0,15"
                        Height="100"/>
                </StackPanel>
            </Border>

            <Border 
                Grid.Column="1"
                Margin="10,0,0,0"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                CornerRadius="8"
                Padding="15">
                <StackPanel>
                    <TextBlock Text="Логи и профилирование" FontSize="20" Margin="0,0,0,15"/>

                    <TextBlock Text="Логи выполнения:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ScrollViewer 
                        Height="200"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        BorderThickness="1"
                        BorderBrush="#FFDDDDDD"
                        Background="White"
                        CornerRadius="4">
                        <TextBlock 
                            x:Name="LogTextBlock" 
                            TextWrapping="Wrap" 
                            FontSize="14"
                            Padding="10"/>
                    </ScrollViewer>

                    <TextBlock Text="Инструкции по профилированию:" FontWeight="SemiBold" Margin="0,15,0,5"/>

                    <Border 
                        Background="#FFF5F5F5"
                        BorderThickness="1"
                        BorderBrush="#FFDDDDDD"
                        CornerRadius="4"
                        Padding="10">
                        <TextBlock 
                            Text="1. В меню отладки выберите 'Производительность'&#10;2. Запустите профилирование памяти&#10;3. Вызовите методы с ошибками&#10;4. Найдите утечки памяти&#10;&#10;Для установки точек останова:&#10;- Установите курсор на строку кода&#10;- Нажмите F9 или кликните слева от номера строки"
                            TextWrapping="Wrap" 
                            FontSize="14"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

<Page
    x:Class="App5.Page4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Анализ алгоритмов" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,15"
            Foreground="#FF212121"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="15" Margin="0,0,0,20">
            <TextBox 
                    x:Name="ArraySizeTextBox" 
                    PlaceholderText="Размер" 
                    Width="120"
                    Height="40"
                    Text="10"
                    InputScope="Number"
                    FontSize="16"
                    Padding="10"/>
            <Button 
                Content="Сгенерировать" 
                Click="GenerateArray_Click"
                Background="#FF0078D7"
                Foreground="White"
                Padding="10,5"/>

            <Button 
                Content="Добавить" 
                Click="AddElement_Click"
                Background="#FF0078D7"
                Foreground="White"
                Padding="10,5"/>

            <Button 
                Content="Удалить" 
                Click="RemoveElement_Click"
                Background="#FFD83B3B"
                Foreground="White"
                Padding="10,5"/>
        </StackPanel>
        <ScrollViewer 
                Grid.Row="2"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                MinHeight="300" 
                        BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                Background="White"
                CornerRadius="8"
                Padding="15">
            <StackPanel x:Name="ArrayStackPanel" Spacing="8"/>
        </ScrollViewer>
        <ScrollViewer 
            Grid.Row="3"
            Height="180"
            VerticalScrollBarVisibility="Auto"
            Margin="0,20,0,0"
            BorderThickness="1"
            BorderBrush="#FFDDDDDD"
            Background="White"
            CornerRadius="8"
            Padding="15">
            <TextBlock 
                x:Name="ResultsTextBlock" 
                FontSize="16"
                TextWrapping="Wrap"/>
        </ScrollViewer>

        <Button 
            Grid.Row="3"
            Content="Запустить тест"
            Click="RunTest_Click"
            Width="200"
            Height="40"
            Margin="0,10,0,0"
            HorizontalAlignment="Right"
            Background="#FF0078D7"
            Foreground="White"
            FontSize="16"
            CornerRadius="4"/>
    </Grid>
</Page>
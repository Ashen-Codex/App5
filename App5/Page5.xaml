<Page
    x:Class="App5.Page5"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Работа со структурами данных" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border 
                Grid.Column="0"
                Margin="0,0,10,0"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                CornerRadius="8"
                Padding="15">
                <StackPanel>
                    <TextBlock Text="Стек" FontSize="20" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,15">
                        <TextBox 
                            x:Name="StackInput" 
                            PlaceholderText="Значение" 
                            Width="150"
                            Height="40"
                            FontSize="16"/>

                        <Button 
                            Content="Добавить" 
                            Click="AddToStack_Click"
                            Width="100"
                            Height="40"
                            Background="#FF0078D7"
                            Foreground="White"/>

                        <Button 
                            Content="Удалить" 
                            Click="RemoveFromStack_Click"
                            Width="100"
                            Height="40"
                            Background="#FFD83B3B"
                            Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="Содержимое стека:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ScrollViewer 
                        Height="200"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        BorderThickness="1"
                        BorderBrush="#FFDDDDDD"
                        Background="White"
                        CornerRadius="4">
                        <StackPanel x:Name="StackItemsPanel" Spacing="8"/>
                    </ScrollViewer>

                    <TextBlock Text="Лог операций:" FontWeight="SemiBold" Margin="0,15,0,5"/>

                    <Border 
                        Background="#FFF5F5F5"
                        BorderThickness="1"
                        BorderBrush="#FFDDDDDD"
                        Padding="10"
                        CornerRadius="4">
                        <TextBlock 
                            x:Name="StackLogTextBlock" 
                            TextWrapping="Wrap" 
                            FontSize="14"
                            Height="80"/>
                    </Border>
                </StackPanel>
            </Border>

            <Border 
                Grid.Column="1"
                Margin="10,0,0,0"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                CornerRadius="8"
                Padding="15">
                <StackPanel>
                    <TextBlock Text="Очередь" FontSize="20" Margin="0,0,0,15"/>

                    <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,0,0,15">
                        <TextBox 
                            x:Name="QueueInput" 
                            PlaceholderText="Значение" 
                            Width="150"
                            Height="40"
                            FontSize="16"/>

                        <Button 
                            Content="Добавить" 
                            Click="AddToQueue_Click"
                            Width="100"
                            Height="40"
                            Background="#FF0078D7"
                            Foreground="White"/>

                        <Button 
                            Content="Удалить" 
                            Click="RemoveFromQueue_Click"
                            Width="100"
                            Height="40"
                            Background="#FFD83B3B"
                            Foreground="White"/>
                    </StackPanel>

                    <TextBlock Text="Содержимое очереди:" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ScrollViewer 
                        Height="200"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        BorderThickness="1"
                        BorderBrush="#FFDDDDDD"
                        Background="White"
                        CornerRadius="4">
                        <StackPanel x:Name="QueueItemsPanel" Spacing="8"/>
                    </ScrollViewer>

                    <TextBlock Text="Лог операций:" FontWeight="SemiBold" Margin="0,15,0,5"/>

                    <Border 
                        Background="#FFF5F5F5"
                        BorderThickness="1"
                        BorderBrush="#FFDDDDDD"
                        Padding="10"
                        CornerRadius="4">
                        <TextBlock 
                            x:Name="QueueLogTextBlock" 
                            TextWrapping="Wrap" 
                            FontSize="14"
                            Height="80"/>
                    </Border>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
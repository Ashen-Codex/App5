<Page
    x:Class="App5.Page11"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Прогресс привычки" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Spacing="15">
            <TextBlock 
                x:Name="HabitNameTextBlock" 
                FontSize="22" 
                FontWeight="SemiBold"/>

            <TextBlock 
                x:Name="HabitDescriptionTextBlock" 
                FontSize="16"
                TextWrapping="Wrap"/>

            <TextBlock Text="Прогресс" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <Border 
                Background="#FFE0E0E0"
                CornerRadius="4"
                Height="20"
                Margin="0,0,0,10">
                <Grid>
                    <Rectangle 
                        x:Name="ProgressBarFill" 
                        Fill="#FF0078D7"
                        HorizontalAlignment="Left"/>
                    <TextBlock 
                        x:Name="ProgressTextBlock" 
                        Text="0%" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Center"
                        FontWeight="SemiBold"/>
                </Grid>
            </Border>

            <TextBlock Text="Календарь" FontWeight="SemiBold" Margin="0,15,0,5"/>
            <ScrollViewer 
                Height="200"
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                Background="White"
                CornerRadius="4">
                <StackPanel x:Name="CalendarStackPanel" Spacing="5"/>
            </ScrollViewer>

            <Button 
                Content="Назад" 
                Click="Back_Click"
                Width="100"
                Height="40"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Background="#FF0078D7"
                Foreground="White"
                FontSize="16"
                CornerRadius="4"/>
        </StackPanel>
    </Grid>
</Page>

<Page
    x:Class="App5.Page7"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Управление книгами" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border 
                Grid.Column="0"
                Margin="0,0,10,0"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                CornerRadius="8"
                Padding="15">
                <StackPanel>
                    <TextBlock Text="Список книг" FontSize="20" Margin="0,0,0,15"/>

                    <Button 
                        Content="Обновить список" 
                        Click="RefreshBooks_Click"
                        Height="40"
                        Margin="0,0,0,15"
                        Background="#FF0078D7"
                        Foreground="White"
                        FontSize="16"/>

                    <ScrollViewer 
                        Height="300"
                        VerticalScrollBarVisibility="Auto"
                        HorizontalScrollBarVisibility="Auto"
                        BorderThickness="1"
                        BorderBrush="#FFDDDDDD"
                        Background="White"
                        CornerRadius="4">
                        <StackPanel x:Name="BooksStackPanel" Spacing="8"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>

            <Border 
                Grid.Column="1"
                Margin="10,0,0,0"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                CornerRadius="8"
                Padding="15">
                <StackPanel>
                    <TextBlock Text="Управление" FontSize="20" Margin="0,0,0,15"/>

                    <TextBlock Text="ID" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox 
                        x:Name="IdTextBox" 
                        PlaceholderText="Авто" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"
                        IsEnabled="False"/>

                    <TextBlock Text="Название" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox 
                        x:Name="TitleTextBox" 
                        PlaceholderText="Введите название" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"/>

                    <TextBlock Text="Автор" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox 
                        x:Name="AuthorTextBox" 
                        PlaceholderText="Введите автора" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"/>

                    <TextBlock Text="ISBN" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox 
                        x:Name="IsbnTextBox" 
                        PlaceholderText="Введите ISBN" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"/>

                    <TextBlock Text="Год издания" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox 
                        x:Name="YearTextBox" 
                        PlaceholderText="Год" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"
                        InputScope="Number"/>

                    <TextBlock Text="Доступность" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <ToggleSwitch 
                        x:Name="AvailabilityToggle" 
                        OnContent="Доступна" 
                        OffContent="Недоступна" 
                        Margin="0,0,0,15"/>

                    <TextBlock 
                        x:Name="ErrorTextBlock" 
                        Foreground="Red" 
                        TextWrapping="Wrap" 
                        Margin="0,5,0,15"
                        Height="60"/>

                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <Button 
                            Content="Добавить" 
                            Click="AddBook_Click"
                            Height="40"
                            Width="100"
                            Background="#FF0078D7"
                            Foreground="White"
                            FontSize="16"/>

                        <Button 
                            Content="Обновить" 
                            Click="UpdateBook_Click"
                            Height="40"
                            Width="100"
                            Background="#FF0078D7"
                            Foreground="White"
                            FontSize="16"/>

                        <Button 
                            Content="Удалить" 
                            Click="DeleteBook_Click"
                            Height="40"
                            Width="100"
                            Background="#FFD83B3B"
                            Foreground="White"
                            FontSize="16"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

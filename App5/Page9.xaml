<Page
    x:Class="App5.Page9"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Мои привычки" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,20"/>

        <ScrollViewer 
            Grid.Row="1"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            BorderThickness="1"
            BorderBrush="#FFDDDDDD"
            Background="White"
            CornerRadius="8"
            Padding="15">
            <StackPanel x:Name="HabitsStackPanel" Spacing="10"/>
        </ScrollViewer>

        <StackPanel 
            Grid.Row="2"
            Orientation="Horizontal" 
            Spacing="10" 
            Margin="0,20,0,0"
            HorizontalAlignment="Right">

            <Button 
                Content="Создать" 
                Click="CreateHabit_Click"
                Width="120"
                Height="40"
                Background="#FF0078D7"
                Foreground="White"
                FontSize="16"
                CornerRadius="4"/>
        </StackPanel>
    </Grid>
</Page>

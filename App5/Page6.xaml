<Page
    x:Class="App5.Page6"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Безопасность приложения" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,20"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border 
                Grid.Column="0"
                Margin="0,0,10,0"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                CornerRadius="8"
                Padding="15">
                <StackPanel>
                    <TextBlock Text="Регистрация" FontSize="20" Margin="0,0,0,15"/>

                    <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox 
                        x:Name="EmailTextBox" 
                        PlaceholderText="user@example.com" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"/>

                    <TextBlock Text="Пароль" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <PasswordBox 
                        x:Name="PasswordBox" 
                        PlaceholderText="••••••••" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"/>

                    <TextBlock Text="Подтверждение пароля" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <PasswordBox 
                        x:Name="ConfirmPasswordBox" 
                        PlaceholderText="••••••••" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"/>

                    <TextBlock 
                        x:Name="RegistrationErrorTextBlock" 
                        Foreground="Red" 
                        TextWrapping="Wrap" 
                        Margin="0,5,0,15"
                        Height="60"/>

                    <Button 
                        Content="Зарегистрироваться" 
                        Click="Register_Click"
                        Height="40"
                        Background="#FF0078D7"
                        Foreground="White"
                        FontSize="16"/>
                </StackPanel>
            </Border>

            <Border 
                Grid.Column="1"
                Margin="10,0,0,0"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                CornerRadius="8"
                Padding="15">
                <StackPanel>
                    <TextBlock Text="Вход" FontSize="20" Margin="0,0,0,15"/>

                    <TextBlock Text="Email" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <TextBox 
                        x:Name="LoginEmailTextBox" 
                        PlaceholderText="user@example.com" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"/>

                    <TextBlock Text="Пароль" FontWeight="SemiBold" Margin="0,0,0,5"/>
                    <PasswordBox 
                        x:Name="LoginPasswordBox" 
                        PlaceholderText="••••••••" 
                        Height="40"
                        Margin="0,0,0,15"
                        FontSize="16"
                        Padding="10"/>

                    <TextBlock 
                        x:Name="LoginErrorTextBlock" 
                        Foreground="Red" 
                        TextWrapping="Wrap" 
                        Margin="0,5,0,15"
                        Height="60"/>

                    <Button 
                        Content="Войти" 
                        Click="Login_Click"
                        Height="40"
                        Background="#FF0078D7"
                        Foreground="White"
                        FontSize="16"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>

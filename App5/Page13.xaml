<Page
    x:Class="App5.Page13"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Обработка текстовых файлов" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="0,0,0,20">
            <TextBox 
                x:Name="FilePathTextBox" 
                PlaceholderText="Путь к файлу" 
                Width="300"
                Height="40"
                FontSize="16"
                Padding="10"
                IsReadOnly="True"/>

            <Button 
                Content="Выбрать файл" 
                Click="SelectFile_Click"
                Width="150"
                Height="40"
                Background="#FF0078D7"
                Foreground="White"
                FontSize="16"
                CornerRadius="4"/>
        </StackPanel>

        <ScrollViewer 
            Grid.Row="2"
            VerticalScrollBarVisibility="Auto"
            HorizontalScrollBarVisibility="Auto"
            BorderThickness="1"
            BorderBrush="#FFDDDDDD"
            Background="White"
            CornerRadius="8"
            Padding="15">
            <StackPanel x:Name="ResultsStackPanel" Spacing="10"/>
        </ScrollViewer>

        <TextBlock 
            Grid.Row="3"
            x:Name="ErrorTextBlock" 
            Foreground="Red" 
            TextWrapping="Wrap" 
            Margin="0,10,0,0"
            Height="60"/>

        <Button 
            Grid.Row="3"
            HorizontalAlignment="Right"
            Content="Обработать файл" 
            Click="ProcessFile_Click"
            Width="200"
            Height="40"
            Margin="0,10,0,0"
            Background="#FF0078D7"
            Foreground="White"
            FontSize="16"
            CornerRadius="4"/>
    </Grid>
</Page>

<Page
    x:Class="App5.Page3"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style TargetType="ListViewItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
        <Style x:Key="ListViewItemStyle" TargetType="ListViewItem">
            <Setter Property="Margin" Value="0,0,0,1"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <ListViewItemPresenter
                        ContentTransitions="{TemplateBinding ContentTransitions}"
                        SelectionCheckMarkVisualEnabled="True"
                        CheckBrush="{ThemeResource SystemControlForegroundBaseMediumHighBrush}"
                        DragBackground="{ThemeResource ListViewItemDragBackground}"
                        DragForeground="{ThemeResource ListViewItemDragForeground}"
                        FocusBorderBrush="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        FocusSecondaryBorderBrush="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                        Padding="12,0,12,0"
                        PressedBackground="{ThemeResource SystemControlBackgroundBaseMediumLowBrush}"
                        SelectedBackground="{ThemeResource SystemControlBackgroundAccentBrush}"
                        SelectedForeground="{ThemeResource SystemControlForegroundBaseHighBrush}"
                        SelectedPressedBackground="{ThemeResource SystemControlBackgroundAccentBrush}"
                        SelectedPointerOverBackground="{ThemeResource SystemControlBackgroundAccentBrush}"
                        VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>
    <Grid Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Название" FontWeight="SemiBold" Foreground="#FF212121" FontSize="16"/>
                <TextBlock Grid.Column="1" Text="Цена" FontWeight="SemiBold" Foreground="#FF212121" FontSize="16"/>
                <TextBlock Grid.Column="2" Text="Кол-во" FontWeight="SemiBold" Foreground="#FF212121" FontSize="16"/>
            </Grid>

            <ListView 
                x:Name="ProductsListView" 
                Grid.Row="1"
                BorderThickness="1"
                BorderBrush="#FFDDDDDD"
                Background="White"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                Height="Auto">
            </ListView>

            <StackPanel 
                Grid.Row="2" 
                Orientation="Horizontal" 
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Spacing="10">

                <TextBox 
    x:Name="NameTextBox" 
    PlaceholderText="Название" 
    Width="250"
                    Height="36"
    FontSize="14"
    Padding="10"
    MaxLength="50"/>


                    <TextBox 
    x:Name="PriceTextBox" 
    PlaceholderText="Цена" 
    Width="100"
                        Height="36"
    FontSize="14"
    Padding="10"
    InputScope="Number"/>

                        <TextBox 
    x:Name="QuantityTextBox" 
    PlaceholderText="Кол-во" 
    Width="100"
                            Height="36"
    FontSize="14"
    Padding="10"
    InputScope="Number"/>

                            <Button 
                    Content="Добавить" 
                    Click="AddProduct_Click" 
                    Width="100"
                    Height="36"
                    Background="#FF0078D7"
                    Foreground="White"
                    FontSize="14"/>

                <Button 
                    Content="Удалить" 
                    Click="DeleteProduct_Click" 
                    Width="100"
                    Height="36"
                    Background="#FFD83B3B"
                    Foreground="White"
                    FontSize="14"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>

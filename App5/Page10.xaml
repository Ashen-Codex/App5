<Page
    x:Class="App5.Page10"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock 
            Text="Новая привычка" 
            FontSize="28" 
            FontWeight="SemiBold" 
            Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Spacing="15">
 
            <TextBlock Text="Название" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox 
                x:Name="NameTextBox" 
                PlaceholderText="Введите название" 
                Height="40"
                FontSize="16"
                Padding="10"/>

            <TextBlock Text="Описание" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox 
                x:Name="DescriptionTextBox" 
                PlaceholderText="Введите описание" 
                Height="80"
                FontSize="16"
                Padding="10"
                AcceptsReturn="True"/>

            <TextBlock Text="Цель" FontWeight="SemiBold" Margin="0,0,0,5"/>
            <TextBox 
                x:Name="TargetTextBox" 
                PlaceholderText="Например: 30 дней" 
                Height="40"
                FontSize="16"
                Padding="10"
                InputScope="Number"/>

            <TextBlock 
                x:Name="ErrorTextBlock" 
                Foreground="Red" 
                TextWrapping="Wrap" 
                Margin="0,5,0,15"
                Height="60"/>

            <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
                <Button 
                    Content="Отмена" 
                    Click="Cancel_Click"
                    Width="100"
                    Height="40"
                    Background="#FFDDDDDD"
                    Foreground="Black"
                    FontSize="16"
                    CornerRadius="4"/>

                <Button 
                    Content="Сохранить" 
                    Click="SaveHabit_Click"
                    Width="100"
                    Height="40"
                    Background="#FF0078D7"
                    Foreground="White"
                    FontSize="16"
                    CornerRadius="4"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
